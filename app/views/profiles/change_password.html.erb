<div class="container">
  
  <h2>Reset Password</h2>
  
  <h4>Please enter the email address associated with this account.</h4>
  
  <input type="text" class="form-control input-md" placeholder="Email Address">
  
  <%= form_for(:profile, url: change_password_path) do |form| %>
    <%= form.label 'New Password' %>
    <%= form.password_field :new_password %>
    <%= form.label 'Confirm_password' %>
    <%= form.password_field :password_confirmation %>
    <%= form.label 'Old Password' %>
    <%= form.password_field :old_password %>
  
    <%= form.submit 'Change Password' %>
  <% end %>
  
  <button class="btn btn-primary">Submit</button>
  
